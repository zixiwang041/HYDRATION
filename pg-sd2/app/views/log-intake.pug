doctype html
html
  head
    title Log Your Water Intake
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        padding: 20px;
        background-color: #f8f9fa;
      }
      .header {
        width: 100%;
        background:rgb(156, 192, 232);
        color: black;
        padding: 15px 0;
        text-align: center;
        font-size: 22px;
        font-weight: bold;
      }
      .container {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 400px;
      }
      select, input, button {
        display: block;
        width: 100%;
        margin: 10px 0;
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
      input {
        box-sizing: border-box;
      }
      button {
        background-color: #007BFF;
        color: white;
        border: none;
        cursor: pointer;
      }
      button:hover {
        background-color: #0056b3;
      }
      .link-container {
        margin-top: 20px;
      }
      a {
        text-decoration: none;
        color: #007BFF;
        font-weight: bold;
      }
      a:hover {
        text-decoration: underline;
      }
      footer {
        width: 100%;
        background:rgb(156, 192, 232);
        padding: 15px;
        text-align: center;
        font-size: 14px;
        color: #666;
        position: absolute;
        bottom: 0;
      }
  
  body
    // Header
    header.header
      div Hydration Tracker

    // Main content
    h2 Log Your Water Intake
    div.container
      form(action='/log-intake' method='POST')
        fieldset(style="border: none; padding: 0; margin: 0;") 
          legend Select Time Slot:
          select(name='timeSlot' required)
            option(value='morning') Morning
            option(value='afternoon') Afternoon
            option(value='night') Night
        
        fieldset(style="border: none; padding: 0; margin: 0;") 
          legend Enter amount in ml:
          input(type='number' name='amount' required min='1' placeholder="Enter ml" style="width: 100%; box-sizing: border-box;")
        
        button(type='submit') Check water intake
    
    div.link-container
      a(href='/summary') View water intake details
    
    // Footer
    footer
