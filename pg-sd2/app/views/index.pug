doctype html
html
  head
    title Hydration Tracker
  body
    h1 Hydration Tracker
    form(action="/track" method="POST")
      input(type="text" name="user" placeholder="Enter Name" required)
      input(type="number" name="amount" placeholder="Amount (ml)" required)
      button(type="submit") Log Water
    a(href="/logs") View Hydration Logs
