doctype html
html
  head
    title Login
    link(rel="stylesheet", href="/style.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r121/three.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js")

  body
    #vanta-header
    .content
      main
        .card-form
          h2 Login
          form(action="/login" method="POST")
            label(for="identifier") Email or Username:
            input#identifier(type="text" name="identifier" required placeholder="Enter your email or username")

            label(for="password") Password:
            input#password(type="password" name="password" required placeholder="Enter your password")

            button.ripple-hover(type="submit") Login

          .link-container
            a(href="/register") Don’t have an account? Register here

      footer
        p © 2025 Hydration Tracker. All rights reserved.

    // Vanta script
    script.
      VANTA.WAVES({
        el: "#vanta-header",
        mouseControls: true,
        touchControls: true,
        minHeight: 700.00,
        minWidth: 200.00,
        scale: 1.0,
        scaleMobile: 1.0,
        color: 0x00bfff,
        shininess: 50.00,
        waveHeight: 20.00,
        waveSpeed: 1.00,
        zoom: 0.85
      });